<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pocketRemovalButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pocket Removal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintStart_toEndOf="@+id/motionButton"
        app:layout_constraintWidth_percent=".3" />


    <Button
        android:id="@+id/chargerRemovalButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Charger Removal"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/motionButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Motion Detection"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chargerRemovalButton" />

</androidx.constraintlayout.widget.ConstraintLayout>